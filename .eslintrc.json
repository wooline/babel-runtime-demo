{
  "parser": "babel-eslint",
  "extends": ["standard", "standard-jsx"],
  "env": {
    "node": true,
    "es6": true,
    "browser": true
  },
  "rules": {
    "quotes": ["error", "double"],
    "semi": [2, "always"],
    "sort-vars": "error",
    "sort-imports": [
      "error",
      {
        "ignoreCase": true,
        "ignoreMemberSort": false,
        "memberSyntaxSortOrder": ["none", "all", "multiple", "single"]
      }
    ],
    "space-before-function-paren": "off"
  }
}
